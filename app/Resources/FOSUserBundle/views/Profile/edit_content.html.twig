{% trans_default_domain 'FOSUserBundle' %}

{{ form_start(form, { 'action': path('fos_user_profile_edit'), 'attr': { 'class': 'fos_user_profile_edit col s12' } }) }}
    <div class="row">
        <div  class="input-field col s6">
            {{ form_label(form.username) }}
            {{ form_widget(form.username) }}
            {{ form_errors(form.username) }}
        </div>
        <div  class="input-field col s6">
            {{ form_label(form.email) }}
            {{ form_widget(form.email) }}
            {{ form_errors(form.email) }}
        </div>
    </div>
    <div class="row">
        <div class="input-field col s6">
            {{ form_label(form.current_password) }}
            {{ form_widget(form.current_password) }}
            {{ form_errors(form.current_password) }}
        </div>
    </div>
    <div class="row">
        <div class="col s2">
            <button type="submit" class="waves-effect waves-light btn amber accent-4">{{ 'profile.edit.submit'|trans }}</button>
        </div>
        <div class="col s2">
            <a href="{{ path('fos_user_change_password') }}" class="waves-effect waves-light btn red">{{ 'lien.mdp.edit'|trans }}</a>
        </div>
    </div>
{{ form_end(form) }}
